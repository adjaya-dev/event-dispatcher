{
    "name": "jasny/event-dispatcher",
    "description": "",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/event-dispatcher/issues",
        "source": "https://github.com/jasny/event-dispatcher"
    },
    "require": {
        "php": ">=7.2.0",
        "improved/function": "~1.0",
        "improved/iterable": "~1.0",
        "jasny/reflection-factory": "^1.1",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Jasny\\EventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jasny\\EventDispatcher\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpstan analyse",
            "phpunit",
            "phpcs -p src"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
